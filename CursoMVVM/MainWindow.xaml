<Window x:Class="CursoMVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CursoMVVM"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="250" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <Button Content="Binding entre componentes" Click="Componentes_Click" Margin="0,0,0,5"/>
        <Button Content="Binding com objetos" Click="Objetos_Click" Margin="0,0,0,5"/>
        <Button Content="Binding com coleções" Click="Colecoes_Click" Margin="0,0,0,5"/>
    </StackPanel>
</Window>
